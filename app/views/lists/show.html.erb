<%= render "navbar" %>

<div class="container">

  <h1><%= @list.name %></h1>

  <%# <%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %>
  <div class="d-flex justify-content-evenly">
  <% @list.bookmarks.each do |b| %>
  <div class="card-trip">
    <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
    <div class="card-trip-infos">
      <div>
        <h2><%= b.movie.title %> | <%= b.movie.rating %> <i class="fa-solid fa-star icone"></i></h2>
        <p><%= b.movie.overview %></p>
      </div>
      <h2 class="card-trip-pricing"><%= link_to "delete", bookmark_path(b), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "text-danger" %></h2>
    </div>
  </div>
  <% end %>
  </div>

  <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-ghost my-3" %>



  <div class="d-flex border-top mt-3 justify-content-around">
    <div class="mt-3">
      <h2>Reviews</h2>
      <% @list.reviews.each do |r| %>
      <p><%= r.rating %> <i class="fa-solid fa-star icone"></i> <i class="">posted <%= r.created_at.strftime("%d/%m/%Y") %></i></p>
      <p><%= r.comment %></p>
      <% end %>
    </div>

    <div class="mt-3">
      <%= render "reviews/form", list: @list, review: @review %>
    </div>
  </div>

</div>
